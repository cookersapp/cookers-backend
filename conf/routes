# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET      /                                 controllers.Landing.index

GET      /admin                            controllers.Admin.index

GET      /admin/articles                   controllers.Articles.index
GET      /admin/articles/new               controllers.Articles.showCreationForm
POST     /admin/articles/new               controllers.Articles.create
GET      /admin/articles/:id               controllers.Articles.showEditForm(id)
POST     /admin/articles/:id               controllers.Articles.edit(id)
DELETE   /admin/articles/:id               controllers.Articles.delete(id)
POST     /admin/articles/:id/attachments   controllers.Articles.saveAttachment(id)
GET      /admin/attachments/:id            controllers.Articles.getAttachment(id)
DELETE   /admin/attachments/:id            controllers.Articles.removeAttachment(id)

GET      /admin/aliments                   controllers.Aliments.index
GET      /admin/aliments/new               controllers.Aliments.showCreationForm
POST     /admin/aliments/new               controllers.Aliments.create
GET      /admin/aliments/:id               controllers.Aliments.showEditForm(id: String)
POST     /admin/aliments/:id               controllers.Aliments.update(id: String)
POST     /admin/aliments/:id/delete        controllers.Aliments.delete(id: String)
POST     /api/aliments                     controllers.Aliments.apiCreate
GET      /api/aliments                     controllers.Aliments.apiFindAll
GET      /api/aliments/:id                 controllers.Aliments.apiFind(id: String)
PUT      /api/aliments/:id                 controllers.Aliments.apiUpdate(id: String)
DELETE   /api/aliments/:id                 controllers.Aliments.apiDelete(id: String)

GET      /samples/forms                    controllers.SampleComplexForm.index
POST     /samples/forms/create             controllers.SampleComplexForm.create

# Map static resources from the /public folder to the /assets URL path
GET      /assets/*file                     controllers.Assets.at(path="/public", file)
