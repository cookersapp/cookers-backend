# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET      /                                 controllers.Landing.index

GET      /admin                            controllers.Admin.index

GET      /admin/articles                   controllers.Articles.index
GET      /admin/articles/new               controllers.Articles.showCreationForm
POST     /admin/articles/new               controllers.Articles.create
GET      /admin/articles/:id               controllers.Articles.showEditForm(id)
POST     /admin/articles/:id               controllers.Articles.edit(id)
DELETE   /admin/articles/:id               controllers.Articles.delete(id)
POST     /admin/articles/:id/attachments   controllers.Articles.saveAttachment(id)
GET      /admin/attachments/:id            controllers.Articles.getAttachment(id)
DELETE   /admin/attachments/:id            controllers.Articles.removeAttachment(id)

POST     /api/aliments                     controllers.Aliments.create
GET      /api/aliments                     controllers.Aliments.findAll
GET      /api/aliments/:id                 controllers.Aliments.find(id: String)
PUT      /api/aliments/:id                 controllers.Aliments.update(id: String)
DELETE   /api/aliments/:id                 controllers.Aliments.delete(id: String)

# Map static resources from the /public folder to the /assets URL path
GET      /assets/*file                     controllers.Assets.at(path="/public", file)
